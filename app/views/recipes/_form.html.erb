<%= form_for @recipe do |f| %>
  <p>Title: <%= f.text_field :title %></p>
    <%= f.fields_for :ingredients do |ing| %>
    <h3>Ingredient</h3>
      <p><%= ing.label :name %> <%= ing.text_field :name %></p>
      <p><%= ing.label :quantity %> <%= ing.text_field :quantity %></p>
    <% end %>
  <p><%= f.submit %></p>
<% end %>
